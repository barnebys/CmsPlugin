{% from '@BitBagCmsPlugin/Block/Macro/translationForm.html.twig' import translationForm %}

<div class="ui two column stackable grid">
    <div class="column">
        <div class="ui segment">
            {{ form_errors(form) }}
            {{ form_row(form.code) }}
            {{ form_row(form.enabled) }}
            {% if form.products is defined %}
                {{ form_row(form.products) }}
            {% endif %}
        </div>
    </div>
</div>

<div class="ui one column stackable grid">
    <div class="column" id="bitbag-block-image">
        {{ translationForm(form.translations, resource) }}
    </div>
</div>